<script language="JavaScript">
		function showform(dowhat) {
			if (dowhat == 'insert'){
				document.getElementById('browse').style.display = 'none';
				document.getElementById('insert').style.display = 'block';
			}
            
            else { //by default display browse
				document.getElementById('browse').style.display = 'block';
				document.getElementById('insert').style.display = 'none';
			}
		}
    function _new() { showform('insert'); }
    function _browse() { showform ('browse'); }

</script>

{{!-- BROWSE --}}
<div id="browse">
{{!-- blank space --}}
<p>&nbsp;</p>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr>
            <td align="center">{{this.Planet_ID}}</td>
            <td align="right">{{this.Name}}</td>
            <td align="right">{{this.Region}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<button onClick="_new()">New</button>
</div>

{{!--INSERT --}}
<div id="insert">
<h2>Add New Planet</h2>
<form id="add-planet-form" method="POST" action="/add-planet-form">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">

    <label for="input-region">Region: </label>
    <input type="text" name="input-region" id="input-region">

    <input class="btn" type="submit" value="Add">
    <input class="btn" type="button" value="Cancel" onClick="_browse()">
</form>
</div>