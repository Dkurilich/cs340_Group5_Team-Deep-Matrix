<script language="JavaScript">
		function showform(dowhat) {
			if (dowhat == 'insert'){
				document.getElementById('browse').style.display = 'none';
				document.getElementById('insert').style.display = 'block';
			}
            
            else { //by default display browse
				document.getElementById('browse').style.display = 'block';
				document.getElementById('insert').style.display = 'none';
			}
		}
    function _new() { showform('insert'); }
    function _browse() { showform ('browse'); }

</script>

{{!-- BROWSE --}}
<div id="browse">
{{!-- blank space --}}
<p>&nbsp;</p>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr>
            <td align="center">{{this.Planet_Route_ID}}</td>
            <td align="right">{{this.Planet}}</td>
            <td align="right">{{this.Hyperspace_Route}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<button onClick="_new()">New</button>
</div>

{{!--INSERT --}}
<div id="insert">
<h2>Add New Planet in Route</h2>
<form id="add-planet-in-route-form" method="POST" action="/add-planet-in-route-form">
    <select name="input-planet" id="input-planet-ajax">
        <option value="">Select a Planet</option>
        {{#each planets}}
        <option value="{{this.planet_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <select name="input-route" id="input-route-ajax">
        <option value="">Select a Route</option>
        {{#each routes}}
        <option value="{{this.route_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <input class="btn" type="submit" value="Add">
    <input class="btn" type="button" value="Cancel" onClick="_browse()">
</form>
</div>